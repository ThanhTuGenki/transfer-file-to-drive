generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum TransferStatus {
    PENDING
    SCANNING
    PROCESSING
    COMPLETED
    FAILED
}

model TransferFolder {
    id        String         @id @default(cuid())
    url       String
    name      String
    status    TransferStatus @default(PENDING)
    createdAt DateTime       @default(now()) @map("created_at")
    updatedAt DateTime       @updatedAt @map("updated_at")

    files TransferFile[]

    @@map("transfer_folders")
}

model TransferFile {
    id          String         @id @default(cuid())
    folderId    String         @map("folder_id")
    folder      TransferFolder @relation(fields: [folderId], references: [id], onDelete: Cascade)
    originalUrl String         @map("original_url")
    name        String
    status      TransferStatus @default(PENDING)
    retryCount  Int            @default(0) @map("retry_count")
    errorLog    String?        @map("error_log")
    localPath   String?        @map("local_path") // Path to downloaded local file for retry
    createdAt   DateTime       @default(now()) @map("created_at")
    updatedAt   DateTime       @updatedAt @map("updated_at")

    @@map("transfer_files")
}
